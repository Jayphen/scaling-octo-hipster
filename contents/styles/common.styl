*
  box-sizing: border-box

body, input, textarea, table
  font-family: gotham
  margin: 0
  padding: 0
  font-weight: 300
  font-size: font-size
  color: font-color
  line-height: base-line-height
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

h1
  font-weight: 500

a
  color: link-color
  &:hover
    color: melon

img
  max-width: 100%

.u-hide
  display: none

.u-show
  display: block

.errors
  border-radius: 3px
  rhythm: 0 0.5 0.5 0 xs
  adjust-font-size-to: xs
  background: tint(red, 70%)
  border: 1px solid shade(red, 20%)
  color: shade(red, 20%)
  text-align: center
  font-weight: 500
  letter-spacing: 0.05em

  p:last-child
    trailer: 0

input:disabled
  cursor: not-allowed !important
