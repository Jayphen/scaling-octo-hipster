@import btn

.hero
  min-height: 500px

.hero-intro
  text-align: center

.hero-callout
  font-weight: normal
  font-size: 48px
  letter-spacing: 0.04em
  text-align: center
  text-transform: uppercase
  line-height: 0.75
  font-family: Gotham-Medium

.hero-subline
  font-weight: normal
  font-size: 22px
  letter-spacing: 0.05em
  line-height: 0
  font-family: Gotham-Light

.hero-nav
  center(960px, 1em)
  padding-top: 2em
  padding-bottom: 7em

.hero-logo, .hero-login
  col(1/2)

.hero-login
  text-align: right

.hero-login-btn
  @extend .btn
