.footer
  background: #1F1F1F

  svg
    height: 20px
    width: 110px

.footer-inner
  center(grid-width)
  padding-leader: 2, 12px
  padding-trailer: 1, 12px
  color: #767676
  adjust-font-size-to: 12px, 1
  letter-spacing: 0.05em

  +below(800px)
    padding-left: 1em
    padding-right: 1em

.footer-links
  col(1/4)

  +tablet()
    col(1/3)

    &:first-of-type
      stack()
      trailer: 1

  +below(600px)
    stack()
    trailer: 1


  ul
    list-style: none
    margin: 0
    padding: 0

  a
    display: block
    text-decoration: none
    color: inherit

.footer-heading
  color: blue
  adjust-font-size-to: xs, 1, 12px
  leader: 0
