// How it works section
.hiw
  rhythm: 4 4 4 4
  background: white
  // edit()

  // Reduce module size for tablet and below
  +tablet()
    adjust-font-size-to: 14px


.hiw-title
  adjust-font-size-to: 36px, 1
  color: #329BE2
  letter-spacing: 0.06em
  text-transform: uppercase
  text-align: center
  trailer: 2, 36px

.hiw-referrer
  font-family: Gotham-Light
  adjust-font-size-to: 20px, 1.4
  color: #585858
  letter-spacing: 0.06em
  center(960px)

.hiw-step
  col(1/3)
  text-align: center

  +tablet()
    stack(1em)
    trailer()

.hiw-step-title
  font-family: Gotham-Medium
  adjust-font-size-to: 22px, 1, 20px
  color: #262626
  letter-spacing: 1px
  text-transform: uppercase
  trailer(0.5)
