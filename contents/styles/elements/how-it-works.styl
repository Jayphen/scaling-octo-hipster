// How it works section
.hiw
  rhythm: 2 2 0 0
  background: white
  // edit()

  // Reduce module size for tablet and below
  +tablet()
    adjust-font-size-to: 14px
    center(600px)


.hiw-title
  adjust-font-size-to: 36px, 1
  color: #329BE2
  letter-spacing: 0.06em
  text-transform: uppercase
  text-align: center
  trailer: 2, 36px

.hiw-referrer
  font-family: Gotham-Light
  adjust-font-size-to: 20px, 1.4
  color: #585858
  letter-spacing: 0.06em
  center(960px)

.hiw-step
  col(1/3)
  text-align: center
  position: relative

  +tablet()
    stack(1em)
    trailer()

.hiw-step-title
  font-family: Gotham-Medium
  adjust-font-size-to: 22px, 1, 20px
  color: #262626
  letter-spacing: 1px
  text-transform: uppercase
  trailer(0.5)

.hiw-cta
  center(960px)
  text-align: center
  leader(2)

.hiw-cta-btn
  btn()
  trailer: 0.5
  center(300px)

  + a
    adjust-font-size-to: 14px
    +tablet()
      btn-secondary()
      &:hover
        color: darken(grey, 20%)

    &:before
      // Insert a line break
      content: ""
      display: block
      height: 0
      width: 0
