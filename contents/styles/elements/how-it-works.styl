// How it works section
.hiw
  rhythm: 2 2 0 0
  background: white
  // edit()

  // Reduce module size for tablet and below
  +below(600px)
    adjust-font-size-to: 14px
    center(600px)

.hiw-title
  adjust-font-size-to: 36px, 1.5
  color: #329BE2
  letter-spacing: 0.06em
  text-transform: uppercase
  text-align: center
  trailer: 2, 36px

  hd-underline(size: 36px)

.hiw-vid
  text-align: center
  trailer: 2
  img:hover
    opacity: 0.9
    cursor: pointer

.hiw-referrer
  font-weight: 300
  adjust-font-size-to: 20px, 1.4
  letter-spacing: 0.06em
  center(grid-width)

.hiw-step
  col(1/3)
  text-align: center
  position: relative
  leader: 1

  +below(700px)
    stack(1em)
    trailer: 2

.hiw-step-title
  font-weight: 500
  adjust-font-size-to: 22px, 1, 20px
  color: #262626
  letter-spacing: 1px
  text-transform: uppercase
  trailer(0.5)
  position: relative
  padding-top: -rhythm(5, 22px)
  .hiw-img
    position: absolute
    bottom: -rhythm(1.5, 22px)
    width: 100%
    text-align: center

.hiw-cta
  center(grid-width)
  text-align: center
  leader(2)

.hiw-cta-btn
  btn()
  trailer: 0.5
  center(300px)

  + a
    adjust-font-size-to: 14px
    +below(600px)
      btn-secondary()
      &:hover
        color: darken(grey, 20%)

    &:before
      // Insert a line break
      content: ""
      display: block
      height: 0
      width: 0
