.seen-on
  background: darken(white, 5%)
  text-align: center
  padding-trailer: 2

  h1
    margin: 0
    padding-leader: 1, 12px
    color: shade(white, 50%)
    adjust-font-size-to: 12px

.seen-on-list, .partner-logos
  margin: 0
  padding: 0
  list-style: none
  padding-leader: 1

  li
    display: inline
    margin: 0
    padding: 0 0.5em

    a
      display: inline-block
      border-bottom: 2px solid alpha(blue, 0.4)
      background: alpha(white, 0.5)
      padding: 1em

      &:hover
        background: white
        border-bottom-color: alpha(blue, 0.7)

  img
    max-height: -rhythm(1)
    vertical-align: middle


.partners
  text-align: center
  padding-leader: 3
  padding-trailer: 3
  background: darken(white, 5%)

.partner-logos
  list-style: none
  margin: 0
  padding: 0
  padding-leader: 1

  li
    display: inline
    padding: 0 1em

    img
      vertical-align: middle
      max-height: -rhythm(2)

      +mobile()
        display: block
        text-align: center
        margin: 0 auto
