.invite-modal
  adjust-font-size-to: 16px, 1.5

  .modal-inner
    background: blue
    color: white

  .modal-close
    &:after
      background: transparent
      btn-secondary(blue, white)

      +below(30em)
        btn-secondary(alpha(white, 60%), blue)
        adjust-font-size-to: 12px, 0.5

  label
    color: lighten(blue, 60%)

  .modal-label h2
    adjust-font-size-to: 18px
    font-weight: 500
    letter-spacing: 0.1em
    hd-underline(white)

  input
    background: shade(blue, 30%)
    border: 0
    adjust-font-size-to: 14px
    rhythm: 0, 0.25, 0.25, 0, 14px
    width: 100%
    padding-left: 0.5em
    padding-right: 0.5em
    font-weight: 400
    letter-spacing: 0.04em
    border-radius: 3px

  input[type=submit]
    btn-secondary(white, blue, true)
    leader: 0.5

  .chosen-container-single .chosen-single, .chosen-results, select
    background: shade(blue, 30%)
    border: 0
    box-shadow: none
    color: white
    adjust-font-size-to: 13px, 1, 12px
    rhythm: 0, 0.25, 0.25, 0, 13px
    height: auto
    margin: 0
    letter-spacing: 0.04em
    -webkit-appearance: none
    -moz-appearance: none
    width: 100%

  select
    adjust-font-size-to: 14px, 1
    padding-left: 0.5em
    padding-right: 0.5em
    font-weight: 400
    cursor: pointer

  option
    rhythm: 0, 0.25, 0.25, 0

  .chosen-single div
    height: 20px
    rhythm: 0.25, 0, 0, 0, 13px

  .chosen-results
    padding: 0
    border-radius: 0 0 3px 3px

    li.highlighted
      background: alpha(white, 0.1)

  .chosen-drop
    border: 0
    box-shadow: none
    width: 100%
