.modal--show header
  border: none
  text-align: center
  padding-leader: 1
  h2
    text-transform: uppercase
    adjust-font-size-to: 14px, 1
    letter-spacing: 0.05em
    font-weight: 500
    text-align: center

.modal--show
  transition: all 0.5s

  .modal-inner
    border-radius: 3px

  .modal-close:after
    top: -rhythm(2)

  +mobile()
    header, .modal-content
      border: 0

    &:before
      background-image: none
      background: blue
      box-shadow: none

    .modal-close:after
      btn-secondary(white, blue)
      adjust-font-size-to: 12px, 0.5
