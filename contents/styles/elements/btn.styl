// General button style. Needs refactoring to be more modular!
btn-shared(weight=500)
  text-decoration: none
  cursor: pointer
  font-weight: weight
  adjust-font-size-to: 14px
  text-transform: uppercase
  border-radius: 3px
  display: inline-block
  transition: all 0.2s

  svg
    height: -rhythm(0.45, 14px)
    line-height: 0
    vertical-align: baseline
    display: inline-block
    width: 20px

btn(color=blue)
  btn-shared()
  padding: 1em
  color: white
  background: color
  adjust-font-size-to: 18px
  letter-spacing: 0.08em
  &:hover
    color: white
    background: darken(color, 20%)

btn-secondary(background=silver, color=grey, alpha = false)
  btn-shared()
  padding: 1em 1.5em
  background: background
  color: color
  &:hover
    if dark(background)
      background: lighten(background, 10%)
    else
      background: darken(background, 10%)

    if dark(color)
      color: darken(color, 20%)
      svg
        fill: darken(color, 20%)
    else
      color: lighten(color, 20%)
      svg
        fill: lighten(color, 20%)

    if alpha == true
      background: alpha(background, 90%)
      .lt-ie9 &
        background: lighten(background, 10%)

  svg
    fill: color
