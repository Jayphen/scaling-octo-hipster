.team
  center(960px)
  padding-leader: 3
  padding-trailer: 3
  text-align: center

.team-members
  list-style: none
  padding-leader: 1
  adjust-font-size-to: 14px

.team-member
  col(1/4, cycle: 4)
  trailer: 1.5, 14px
  color: lighten(black, 30%)

  +desktop()
    &:nth-child(4n) ~ li
      shift(1/8)

  +tablet()
    col(1/3, uncycle: 4, cycle: 3)

    &:last-of-type
      shift(1/3)

  +below(600px)
    col(1/2, uncycle: 3, cycle: 2)

    &:last-of-type
      shift(1/4)

.team-member-name
  text-transform: uppercase
  color: blue
  letter-spacing: 0.1em
  font-weight: 500
  leader: 0.25, 14px
