.team
  center(960px)
  padding-leader: 3
  padding-trailer: 3
  text-align: center

  .modal-close:before
    background: alpha(white, 0.9)

.team-members
  margin: 0
  padding: 0
  list-style: none
  padding-leader: 1
  adjust-font-size-to: 14px
  background: white
  overflow: hidden

.team-member
  trailer: 1.5, 14px

  a
    text-decoration: none
    color: lighten(black, 30%)

.advisors .team-member
  col(1/4)

  +below(600px)
    col(1/2, cycle: 2)

.core .team-member
  col(1/4, cycle: 4)

  +desktop()
    &:nth-child(4n) ~ li
      shift(1/8)

  +tablet()
    col(1/3, uncycle: 4, cycle: 3)

    &:last-of-type
      shift(1/3)

  +below(600px)
    col(1/2, uncycle: 3, cycle: 2)

    &:last-of-type
      shift(1/4)

.team-member-name
  text-transform: uppercase
  color: blue
  letter-spacing: 0.1em
  font-weight: 500
  leader: 0.25, 14px

.team-controls
  clear: both

  a
    btn-secondary()

.team-modal-face
  col(1/5)
.team-modal-blurb
  col(4/5)
.team-modal-position
  text-align: center
  adjust-font-size-to: 12px, 0.75
  color: lighten(black, 50%)
